<script>
    // Variables para controlar las respuestas
    let noCounter = 0;

    // Obtener los elementos del botÃ³n y del mensaje
    const yesButton = document.getElementById('yesButton');
    const noButton = document.getElementById('noButton');
    const messageDiv = document.getElementById('message');

    // FunciÃ³n para manejar el clic en "SÃ­"
    yesButton.addEventListener('click', () => {
        messageDiv.innerHTML = ''; // Limpiar el mensaje
    });

    // FunciÃ³n para manejar el clic en "No"
    noButton.addEventListener('click', () => {
        noCounter++; // Incrementar el contador de "No"

        if (noCounter === 1) {
            messageDiv.innerHTML = 'Â¿EstÃ¡s segura?'; // Primer mensaje
        } else if (noCounter === 2) {
            messageDiv.innerHTML = 'Por fa, perdÃ³name ðŸ˜¢'; // Segundo mensaje
        } else {
            messageDiv.innerHTML = ''; // Limpiar despuÃ©s del tercer "No"
        }
    });
